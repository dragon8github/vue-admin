.hongte-grid {
    margin: 10px;
}



/**
 * dialog
 */
.hongte-dialog {
  .el-dialog {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    width: 75%;
    height: 90%;
    margin-top: 0 !important;
  }

  .el-dialog__body {
    height: 95%;
    padding: 0;
    overflow: auto;
  }
}

/**
 * 表格
 */
.hongte-table {
  margin-top: 20px;

  .cell {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: left;
    padding-left: 25px;
  }

  .cell > .el-button {
      margin: 0;
  }

  .hongte-table-align {
      .cell {
          text-align: center;
          display: flex;
          justify-content: space-evenly;
          padding: 0;
      }
  }

  .fa {
    padding-right: 5px;
  }

  .el-button--mini {
    padding: 7px 10px;
  }
}

/**
 * 分页样式
 */
.hongte-Pagination {
  margin: 20px;
}

/**
 * 美化card头部的样式
 */
.hongte-query-card {
  .hongte-card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .el-card__header {
    padding: 10px 20px;
  }

  .el-card__body {
    padding-bottom: 10px;
  }

  .hongte-card-switch {
    text-align: center;
    color: #999;

    &:hover {
      color: #409eff;

      span, i {
        opacity: 1;
        left: 0;
      }
    }

    span {
      opacity: 0;
    }
    
    span, i {
      padding-left: 10px;
      position: relative;
      left: 38px;
      font-size: 12px;
      transition: all 0.3s;
    }
  }
}

/**
 * 鸿特典型的查询条件表单
 */
.hongte-query-form {
  display: flex;
  flex-wrap: wrap;

  .el-form-item {
    display: flex;
    margin-right: 0px;
    padding-right: 30px;
    width: 25%;
  }

  &.hongte-item-2 .el-form-item {
    width: 50%;
  }

  &.hongte-item-4 .el-form-item {
    width: 25%;
  }

  &.hongte-item-3 .el-form-item {
    width: 33%;
  }

  .el-form-item__label {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .el-form-item__content {
    flex: 1;
  }

  .el-select {
    width: 100%;
  }

  .el-date-editor .el-range-separator {
    width: 20px;
  }

  .el-range-editor.el-input__inner {
    width: 100%;
  }
}

/**
* 自适应设计
*/
@media screen and (max-width: 1920px) {
  .hongte-query-form .el-form-item {
    width: 25%;
  }
}
@media screen and (max-width: 1640px) {
  .hongte-query-form .el-form-item {
    width: 33.3%;
  }
}
@media screen and (max-width: 1300px) {
  .hongte-query-form .el-form-item {
    width: 50%;
  }
}
@media screen and (max-width: 1000px) {
  .hongte-query-form .el-form-item {
    width: 100%;
  }
}
