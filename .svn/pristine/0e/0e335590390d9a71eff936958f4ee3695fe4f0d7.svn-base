/**
 * 表格
 */
.hongte-table {
    margin-top: 20px;

    .cell {
        display: flex;
        justify-content: space-around;
    }
        
        .cell > .el-button {
            margin: 0;
        }
}

/**
 * 分页样式
 */
.hongte-Pagination {
    margin-top: 30px;
}

/**
 * 美化card头部的样式
 */
.hongte-query-card {
    .card-header {
       display: flex;
       justify-content: space-between;
       align-items: center;
    }

        .el-card__header {
            padding: 10px 20px;
        }

        .el-card__body {
            padding-bottom: 10px;
        }
}

/**
 * 鸿特典型的查询条件表单
 */
.hongte-query-form {
    display: flex;
    flex-wrap: wrap;

    .el-form-item {
        display: flex;
        margin-right: 0px;
        padding-right: 30px;
        width: 25%;
    }

    &.hongte-item-2 .el-form-item {
        width: 50%;
    }

    &.hongte-item-4 .el-form-item {
        width: 25%;
    }

    &.hongte-item-3 .el-form-item {
        width: 33%;
    }

        .el-form-item__label {
            width: 120px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .el-form-item__content {
            flex: 1;
        }

        .el-select {
            width: 100%;
        }

        .el-date-editor .el-range-separator {
            width: 20px;
        }

        .el-range-editor.el-input__inner {
            width: 100%;
        }
}